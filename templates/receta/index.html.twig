{% extends 'base.html.twig' %}

{% block title %}Recetario{% endblock %}

{% block body %}
<style>
    .main {
        display: flex;
        flex-direction: column;
        align-items: center;
        background-color: #f5f5f5;
        width: 60%;
        margin: 0 auto;
        margin-top: 5%;
        gap: 1rem;
        border-radius: 16px;
        padding: 1rem;
        text-align: center;
    }
    .tittle {
        font-size: 3rem;
        font-weight: 400;
        padding: 0;
        margin: 0;
    }

    .receta{
        display: flex;
        flex-direction: column;
        align-items: center;
        border: 1px solid #ccc;
        border-radius: 16px;
        padding: 1rem;
        width: 400px;
        overflow: hidden;
        gap: 1rem;
    }

    .recetaHeader {
        display: flex;
        flex-direction: row;
        align-items: center;
        gap: 1rem;
        justify-content: space-around;
        width: 100%;
    }
    .fotoReceta {
        max-width: 100%;
    }
    .recetaFooter {
        text-align: center;
    }
    .listaIngredientes {
        width: 50%;
        margin: 0 auto;
        padding: 0;
        padding-bottom: 1rem;
    }
    .listaIngredientes li {
        list-style: none;
    }
</style>

<div class="main">
    <h1 class='tittle'>Recetario</h1>

    <a href="{{ path('app_receta_new') }}">Crear receta</a>
    {% for receta in recetas %}
        <div class="receta">
            <div class="recetaHeader">
                <h2>{{ receta.nombre }}</h2>
                <p>{{ receta.tipoReceta }}</p>
            </div>
            <div class="recetaBody">
                <img src={{asset('img/' ~ fotos[key])}} alt='foto de receta' class='fotoReceta'/>
            </div>
            <div class="recetaFooter">
                <details>
                    <summary>Receta</summary>
                    <p><b>Ingredientes</b></p>
                    <ul class='listaIngredientes'>
                        {% for ingrediente in ingredientes[key] %}
                            <li>{{ ingrediente }}</li>
                        {% endfor %}
                    </ul>
                    <p><b>Preparaci√≥n</b></p>
                    {{ receta.descripcion }}
                </details>
            </div>
        </div>
        {% set key = key + 1 %}
    {% endfor %}
    
</div>
{% endblock %}