{% extends 'base.html.twig' %}

{% block title %}Recetario{% endblock %}

{% block body %}
<style>
    .main {
        display: flex;
        flex-direction: column;
        align-items: center;
        background-color: #f5f5f5;
        width: 60%;
        margin: 0 auto;
        margin-top: 5%;
        gap: 1rem;
        border-radius: 16px;
        padding: 1rem;
    }
    .tittle {
        font-size: 3rem;
        font-weight: 400;
        padding: 0;
    }

    .receta{
        display: flex;
        flex-direction: column;
        align-items: center;
        border: 1px solid #ccc;
        border-radius: 16px;
        padding: 1rem;
        width: 400px;
        overflow: hidden;
        gap: 1rem;
    }

    .recetaHeader {
        display: flex;
        flex-direction: row;
        align-items: center;
        gap: 1rem;
        justify-content: space-around;
        width: 100%;
    }
    .fotoReceta {
        max-width: 100%;
    }
    .recetaFooter {
        text-align: center;
    }
</style>

<div class="main">
    <h1 class='tittle'>Recetario</h1>

    <a href="{{ path('app_receta_new') }}">Crear receta</a>
    {% for receta in recetas %}
        <div class="receta">
            <div class="recetaHeader">
                <h2>{{ receta.nombre }}</h2>
                <p>{{ receta.tipoReceta }}</p>
            </div>
            <div class="recetaBody">
                <img src={{asset(fotos[key])}} alt='foto de receta' class='fotoReceta'/>
            </div>
            <div class="recetaFooter">
                <details>{{ receta.descripcion }}</details>
            </div>
        </div>
        {% set key = key + 1 %}
    {% endfor %}
    
</div>
{% endblock %}