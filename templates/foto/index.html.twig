{% extends 'base.html.twig' %}

{% block title %}Foto index{% endblock %}

{% block body %}
    <h1>Foto index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Foto</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for foto in fotos %}
            <tr>
                <td>{{ foto.id }}</td>
                <td>{{ foto.foto }}</td>
                <td>
                    <a href="{{ path('app_foto_show', {'id': foto.id}) }}">show</a>
                    <a href="{{ path('app_foto_edit', {'id': foto.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_foto_new') }}">Create new</a>
{% endblock %}
